@page "/AddEmployee"
@inject EmployeesController employeeService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<h1>Добавить сотрудника</h1>

<form>
    <div class="row">
        <div class="col-sm-8">

            <div class="form-group">
                <label for="Name" class="control-label">Имя</label>
                <input form="Name" class="form-control" @bind="employee.Имя" />
            </div>
            <div class="form-group">
                <label for="Surname" class="control-label">Фамилия</label>
                <input form="Surname" class="form-control" @bind="employee.Фамилия" />
            </div>
            <div class="form-group">
                <label for="Должность" class="control-label">Должность</label>
                <input form="Должность" class="form-control" @bind="employee.Должность" />
            </div>
            <div class="form-group">
                <label for="ДатаРождения" class="control-label">ДатаРождения</label>
                <input form="ДатаРождения" type="date" class="form-control" @bind="employee.ДатаРождения" />
            </div>
            <div class="form-group">
                <label for="Адрес" class="control-label">Адрес</label>
                <input form="Адрес" class="form-control" @bind="employee.Адрес" />
            </div>
            <div class="form-group">
                <label for="Телефон" class="control-label">Телефон</label>
                <input form="Телефон" class="form-control" @bind="employee.Телефон" />
            </div>
            <div class="form-group">
                <label for="Email" class="control-label">Эл. Почта</label>
                <input form="Email" class="form-control" @bind="employee.Email" />
            </div>
            <div class="form-group">
                <label for="Зарплата" class="control-label">Зарплата</label>
                <input form="Зарплата" class="form-control" @bind="employee.Зарплата" />
            </div>
            <div class="form-group">
                <label for="Фото" class="control-label">Фото</label>
                <input form="Фото" class="form-control" @bind="employee.Фото" />
            </div>

        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input type="button" class="btn btn-primary" @onclick="@CreateEmployee" value="Сохранить" />
                    <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Отмена" />
                </div>
            </div>
        </div>
    </div>
</form>



@code {
    Employee employee = new Employee();
    protected async void CreateEmployee()
    {
        await employeeService.AddEmployeeAsync(employee);
        NavigationManager.NavigateTo("Employees");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Employees");

    }

}