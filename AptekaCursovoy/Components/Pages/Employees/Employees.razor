@page "/Employees"
@inject EmployeesController employeeService
@rendermode InteractiveServer

<NavLink class="nav-link" href="AddEmployee">
    <span class="oi oi-plus" aria-hidden="true">
        Добавить сотрудника
    </span>
</NavLink>
<h1>Сотрудники</h1>
@if (_employees == null)
{
    <p><em>Загрузка...</em></p>
}
else
{
    <div class="container">

        <div class="row bg-light">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Должность</th>
                        <th>Дата Рождения</th>
                        <th>Адрес</th>
                        <th>Телефон</th>
                        <th>Email</th>
                        <th>Зарплата</th>
                        <th>Фото</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var employee in _employees)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.Имя</td>
                            <td>@employee.Фамилия</td>
                            <td>@employee.Должность</td>
                            <td>@employee.ДатаРождения</td>
                            <td>@employee.Адрес</td>
                            <td>@employee.Телефон</td>
                            <td>@employee.Email</td>
                            <td>@employee.Зарплата</td>
                            <td>@employee.Фото</td>
                            <td>
                                <a href="EditEmployee/@employee.Id">
                                    <span>Редактировать</span>
                                </a>
                                <a href="DeleteEmployee/@employee.Id">
                                    <span>Удалить</span>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}

@code {



    List<Employee>? _employees;
    protected override async Task OnInitializedAsync()
    {
        _employees = await Task.Run(() => employeeService.GetAllEmployeeAsync());
    }
}